{
  "name": "@tecsinapse/ui-kit",
  "description": "TecSinapse UI-KIT",
  "version": "0.0.130-07bb71af",
  "browser": "dist/index.js",
  "main": "dist/index.cjs.js",
  "module": "build/index.js",
  "dependencies": {},
  "files": [
    "build",
    "dist"
  ],
  "scripts": {
    "build": "rm -rf build/ && babel src/ -d build/ && rollup -c",
    "build-all": "yarn build && yarn docz:build && yarn storybook:build",
    "build-publish": "yarn build-all && npm publish",
    "dev": "rollup -c -w",
    "docz:build": "docz build -d docs/docz/ --base='/ui-kit/docz/' ",
    "docz:dev": "docz dev",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o docs/storybook/",
    "test": "NODE_ENV=test jest test/"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleDirectories": [
      "bower_components",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --max-warnings=0 --fix",
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "@material-ui/core": "^3.9.1",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/styles": "^3.0.0-alpha.10",
    "@mdi/js": "^3.0.39",
    "@mdi/react": "^1.1.0",
    "@tecsinapse/es-utils": "0.0.96",
    "classnames": "^2.2.6",
    "material-ui-search-bar": "1.0.0-beta.13",
    "memoize-one": "^5.0.0",
    "react": ">= 16.3.x",
    "react-select": "^2.3.0",
    "react-text-mask": "^5.4.3",
    "react-virtualized": "^9.21.0",
    "react-window": "^1.5.1",
    "text-mask-addons": "^3.8.0",
    "typeface-roboto": "^0.0.54"
  },
  "sideEffects": false
}
